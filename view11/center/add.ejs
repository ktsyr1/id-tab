<%- include('../themes/header.ejs') -%>
    <%- include('../themes/nav.ejs') -%>
        <div class="container">

            <div class="rows " style="text-align: right;">
                <br>
                <h3>اظافة مركز</h3><hr>
                <% if (errors) {%>
                     <% errors.forEach((err)=> {%> 
                    <div class="alert alert-danger">
                        <%= err.msg %>
                    </div>
                <% })%> <% }%> 
                <form action="/add" method="post">
                    <div class="form-row">
                       
                        <div class="form-group col-md-6">
                            <label for="name">اسم المركز</label>
                            <input type="text" name="name" class="form-control" id="name">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="phone">هاتف المركز</label>
                            <input type="number" class="form-control" name="phone" id="phone">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="address">العنوان </label>
                        <input type="text" name="address" class="form-control" id="address" placeholder="1234 Main St">
                    </div>
                    <div class="form-group">
                        <label for="jurisdiction">الاختصاص</label>
                        <input type="text" name="jurisdiction" class="form-control" id="jurisdiction" placeholder="Apartment, studio, or floor">
                    </div>
                    <div class="form-group ">
                        <label for="description">الخريطة</label> 
                        <input type="url" name="description" class="form-control" id="description">
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="date "> التاريخ</label>
                            <input type="date" name="date" class="form-control" id="date">
                        </div> 
                        <div class="form-group col-md-6">
                            <button type="submit" class="btn btn-primary" style="margin: 32px 0 0 0;float: left;">اظافة</button></div>
                    </div>
                </form>
            </div>
        </div>
        <%- include('../themes/footer.ejs') -%>
extends layout/header
block content
    .container(style="display: flex;")
        .row.row-cols-1.row-cols-sm-2.row-cols-md-4 
            each center  in centers
                a.gray(href='/' + center.id) 
                    .icard
                        img.card-img-top.clip-1.b-r(src="/imges/bg.png")
                        .card-body.ThreeSteps 
                            h5.card-title=   center.name  
                            h6.address.b-r=   center.address   

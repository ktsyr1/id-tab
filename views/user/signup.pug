extends ../layout/header 
block content 
    .login
        each mm in message
            .sb.alert.alert-danger= mm
    form.login.sb(action="signup", method="post") 
        
        h4 تسجيل
        .formn
            label( for="email")
            input( type="email"  name="email" placeholder="ايميل")
        .formn
            label( for="password") 
            input( 
                type="password" 
                 name="password"
                  placeholder="كلمة السر")
        //- .formn
        //-     label( for="rePassword") 
        //-     input( type="password"  name="rePassword" placeholder="اعادة كلمة السر ")
